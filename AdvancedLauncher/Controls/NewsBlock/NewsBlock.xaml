<UserControl x:Class="AdvancedLauncher.Controls.NewsBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Service="clr-namespace:AdvancedLauncher.Service"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:env="clr-namespace:AdvancedLauncher.Environment"
             mc:Ignorable="d"
             d:DesignHeight="470" d:DesignWidth="900"
             DataContext="{Binding Source={x:Static env:LanguageEnv.Strings}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AdvancedLauncher;component/Resources/SharedLite.xaml" />
                <ResourceDictionary Source="/AdvancedLauncher;component/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Service:IntConverter x:Key="WidthConverter" />
            <Style x:Key="SpoilerButton" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Padding" Value="1" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid x:Name="Chrome" Cursor="Hand" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <TabControl x:Name="NewsTabControl" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="NavTwitter" Controls:ControlsHelper.HeaderFontSize="12" Header="TWITTER">
                <Grid Margin="360,5,5,5">
                    <GroupBox Header="Twitter">
                        <ListBox x:Name="TwitterNewsList" Margin="-5,-5,0,-5" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Opacity="0"
                                 d:DataContext="{d:DesignData TwitterViewModelSampleData.xaml}" ItemsSource="{Binding Items}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Loaded="ParseTextBlock" Text="{Binding Title}" TextWrapping="Wrap" />
                                            <Separator Margin="0,5,0,0" Opacity="0.5" />
                                            <Grid Height="18" Opacity="0.7">
                                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding ElementName=LayoutRoot, Path=DataContext.NewsPubDate}">
                                                    <Run Text="{Binding Date}" />
                                                </TextBlock>
                                                <TextBlock Margin="5,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <Hyperlink Style="{DynamicResource HyperLinkAccent}" NavigateUri="{Binding UserLink}" RequestNavigate="OnRequestNavigate">
                                                        <Image Margin="0,3,0,-3" Height="15" Width="15" Source="{Binding Image}" Stretch="UniformToFill" />
                                                        <Run Text="{Binding UserName}" />
                                                    </Hyperlink>
                                                </TextBlock>
                                            </Grid>
                                            <Separator Margin="0,8,0,0" Opacity="0.8" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                    <Controls:ProgressRing x:Name="TwitterProgressRing" Height="70" Width="70" IsActive="False" />
                </Grid>
            </TabItem>
            <TabItem x:Name="NavJoymax" Controls:ControlsHelper.HeaderFontSize="12" Header="JOYMAX">
                <Grid Margin="360,5,5,5">
                    <GroupBox Header="Joymax">
                        <ListBox Margin="-5,-5,0,-5" x:Name="JoymaxNewsList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Visible" Opacity="1"
                             d:DataContext="{d:DesignData JoymaxViewModelSampleData.xaml}" ItemsSource="{Binding Items}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel.Resources>
                                            <Storyboard x:Key="OpenContent">
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="JoyMax_New_Content">
                                                    <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="JoyMax_New_Content" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btn_CloseContent" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btn_OpenContent" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                            <Storyboard x:Key="CloseContent">
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Storyboard.TargetName="JoyMax_New_Content">
                                                    <EasingDoubleKeyFrame KeyTime="0" Value="1" />
                                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="JoyMax_New_Content" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{x:Static Visibility.Collapsed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btn_CloseContent" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btn_OpenContent" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </StackPanel.Resources>
                                        <Grid Height="25" x:Name="JoyMax_New_Header" Margin="-5,5,0,0">
                                            <Grid.Background>
                                                <ImageBrush ImageSource="images\bbs_mode.png" Viewbox="{Binding ImgVB}" Viewport="0,0,90,18" ViewboxUnits="Absolute" ViewportUnits="Absolute" Stretch="None" TileMode="None" />
                                            </Grid.Background>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="100*" />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Margin="0,-1,0,0" Text="{Binding Type}" TextAlignment="Center" Foreground="#FFF" />
                                                <TextBlock Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap">
                                                    <Hyperlink Style="{DynamicResource HyperLinkAccent}" NavigateUri="{Binding Link}" RequestNavigate="OnRequestNavigate">
                                                        <TextBlock Text="{Binding Title}" />
                                                    </Hyperlink>
                                                </TextBlock>
                                                <Button Grid.Column="3" Width="20" Margin="0,-5,0,0" x:Name="btn_OpenContent" Style="{StaticResource SpoilerButton}" Cursor="Hand" HorizontalAlignment="Right">
                                                    <Button.Resources>
                                                        <ResourceDictionary>
                                                            <SolidColorBrush x:Key="BlackBrush" Color="{DynamicResource AccentColor}" />
                                                        </ResourceDictionary>
                                                    </Button.Resources>
                                                    <Button.Triggers>
                                                        <EventTrigger RoutedEvent="Button.Click">
                                                            <BeginStoryboard Storyboard="{StaticResource OpenContent}" />
                                                        </EventTrigger>
                                                    </Button.Triggers>
                                                    <Button.Content>
                                                        <Rectangle Width="12" Height="10">
                                                            <Rectangle.Fill>
                                                                <VisualBrush Visual="{StaticResource appbar_chevron_down}" />
                                                            </Rectangle.Fill>
                                                        </Rectangle>
                                                    </Button.Content>
                                                </Button>
                                                <Button Grid.Column="3" Width="20" Margin="0,-5,0,0" x:Name="btn_CloseContent" Style="{StaticResource SpoilerButton}" Cursor="Hand" HorizontalAlignment="Right" Visibility="Collapsed">
                                                    <Button.Resources>
                                                        <ResourceDictionary>
                                                            <SolidColorBrush x:Key="BlackBrush" Color="{DynamicResource AccentColor}" />
                                                        </ResourceDictionary>
                                                    </Button.Resources>
                                                    <Button.Triggers>
                                                        <EventTrigger RoutedEvent="Button.Click">
                                                            <BeginStoryboard Storyboard="{StaticResource CloseContent}" />
                                                        </EventTrigger>
                                                    </Button.Triggers>
                                                    <Rectangle Width="10" Height="10">
                                                        <Rectangle.Fill>
                                                            <VisualBrush Visual="{StaticResource appbar_close}" />
                                                        </Rectangle.Fill>
                                                    </Rectangle>
                                                </Button>
                                            </Grid>
                                        </Grid>
                                        <Grid x:Name="JoyMax_New_Content" Visibility="Collapsed">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="20" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="33*" />
                                                <ColumnDefinition Width="33*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Width="350" Padding="5" Text="{Binding Content}" HorizontalAlignment="Left" TextWrapping="Wrap" />
                                            <TextBlock Grid.Row="1" Grid.Column="0" Padding="5,0,0,0" Text="{Binding ElementName=LayoutRoot, Path=DataContext.NewsPubDate}" TextWrapping="Wrap" />
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Date}" TextWrapping="Wrap" />
                                            <TextBlock Grid.Row="1" Grid.Column="2" Padding="0,0,5,0" TextWrapping="Wrap" TextAlignment="Right" FontWeight="Bold">
                                                 <Hyperlink Style="{DynamicResource HyperLinkAccent}" NavigateUri="{Binding Link}" RequestNavigate="OnRequestNavigate">
                                                     <Run Text="{Binding ElementName=LayoutRoot, Path=DataContext.NewsReadMore}" />
                                                 </Hyperlink>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                    <Controls:ProgressRing x:Name="JoymaxProgressRing" Height="70" Width="70" IsActive="False" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>