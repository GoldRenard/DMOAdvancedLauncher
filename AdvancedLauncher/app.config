<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <appender name="LogAppender" type="AdvancedLauncher.Environment.LogAppender">
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="[%d %t %-5p %c] %m%n" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${APPDATA}\\GoldRenard\\AdvancedLauncher\\" />
      <datePattern value="'console_'ddMMyyyy'.log'" />
      <staticLogFileName value="false" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="[%date %-5p %class/%method:%line] %m%n" />
      </layout>
    </appender>
    <root>
      <level value="ANY" />
      <appender-ref ref="LogAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
</configuration>